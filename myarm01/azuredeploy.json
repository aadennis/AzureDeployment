{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "mahstorageType": {
          "type": "string",
          "defaultValue": "Standard_LRS",
          "allowedValues": [
              "Standard_LRS",
              "Standard_ZRS",
              "Standard_GRS",
              "Standard_RAGRS",
              "Premium_LRS"
          ]
      }
    
  },
  "variables": {
      "mahstorageName": "[concat('mahstorage', uniqueString(resourceGroup().id))]"
    
  },
  "resources": [
      {
          "name": "[variables('mahstorageName')]",
          "type": "Microsoft.Storage/storageAccounts",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [ ],
          "tags": {
              "displayName": "mahstorage"
          },
          "properties": {
              "accountType": "[parameters('mahstorageType')]"
          }
      }
    
  ]
}
